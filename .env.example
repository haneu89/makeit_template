# ============================================
# 서버 설정
# ============================================
# 실행 환경: development(개발) 또는 production(운영)
NODE_ENV=development

# 서버 포트 번호 (기본값: 3000)
PORT=3000

# 앱 URL (프론트엔드에서 사용)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 디버그 모드 활성화 (true/false)
APP_DEBUG=true


# ============================================
# CORS 설정 (Cross-Origin Resource Sharing)
# ============================================
# 허용할 외부 도메인 (쉼표로 구분)
# 예시: https://yourdomain.com,https://admin.yourdomain.com
#
# 개발 환경(NODE_ENV=development): 비워두면 모든 도메인 허용
# 운영 환경(NODE_ENV=production): 비워두면 same-origin만 허용 (외부 도메인 차단)
CORS_ALLOWED_ORIGINS=


# ============================================
# JWT 인증 설정
# ============================================
# JWT 시크릿 키 생성 방법 (아래 중 하나 선택):
# 1. openssl rand -hex 64          (512비트, 가장 안전 - 권장)
# 2. openssl rand -base64 32       (256비트)
# 3. node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# 액세스 토큰 시크릿 (반드시 변경!)
JWT_ACCESS_TOKEN_SECRET=your-secret-key-here-change-this-immediately

# 액세스 토큰 만료 시간 (예: 15m, 1h, 2h, 1d, 7d)
JWT_ACCESS_TOKEN_EXPIRATION=1h

# 리프레시 토큰 시크릿 (반드시 변경! 액세스 토큰과 다른 값)
JWT_REFRESH_TOKEN_SECRET=your-refresh-secret-key-here-change-this-immediately

# 리프레시 토큰 만료 시간
JWT_REFRESH_TOKEN_EXPIRATION=7d


# ============================================
# 데이터베이스 설정 (Prisma)
# ============================================
# 아래 중 하나를 선택하여 사용 (나머지는 주석 처리)

# 1. SQLite (개발/테스트용 - 파일 기반, 설치 불필요)
DATABASE_URL="file:../../storage/database.db"

# 2. MySQL (운영용)
# DATABASE_URL="mysql://username:password@host:port/database_name"
# 예시:
# DATABASE_URL="mysql://myuser:mypassword@localhost:3306/myapp_db"
# DATABASE_URL="mysql://root:password123@127.0.0.1:3306/production_db"
# 외부 서버: DATABASE_URL="mysql://user:pass@server.example.com:3306/db"

# 3. PostgreSQL (운영용 - 권장)
# DATABASE_URL="postgresql://username:password@host:port/database_name?schema=public"
# 예시:
# DATABASE_URL="postgresql://myuser:mypassword@localhost:5432/myapp_db?schema=public"
# DATABASE_URL="postgresql://postgres:password123@127.0.0.1:5432/production_db?schema=public"
# 외부 서버: DATABASE_URL="postgresql://user:pass@server.example.com:5432/db?schema=public"

# 4. MySQL (SSL 연결)
# DATABASE_URL="mysql://user:password@host:3306/db?ssl=true"

# 5. PostgreSQL (SSL 연결)
# DATABASE_URL="postgresql://user:password@host:5432/db?schema=public&sslmode=require"


# ============================================
# OAuth 소셜 로그인 설정 (선택사항)
# ============================================

# Google OAuth
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Kakao OAuth
# https://developers.kakao.com/console/app
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=
KAKAO_CALLBACK_URL=http://localhost:3000/api/auth/kakao/callback

# Naver OAuth
# https://developers.naver.com/apps/#/list
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=
NAVER_CALLBACK_URL=http://localhost:3000/api/auth/naver/callback


# ============================================
# 파일 업로드 설정
# ============================================
# 파일 저장 디렉토리
UPLOAD_DIR=./storage/uploads

# 최대 파일 크기 (바이트)
# 10485760 = 10MB
# 52428800 = 50MB
# 104857600 = 100MB
UPLOAD_MAX_SIZE=10485760


# ============================================
# 로그 설정
# ============================================
# 로그 저장 디렉토리
LOG_DIR=./storage/logs

# 로그 파일 최대 보관 개수 (0 = 무제한)
LOG_MAX_FILES=30

# 로그 파일 최대 크기 (예: 10m, 50m, 100m)
LOG_MAX_SIZE=10m

# Sentry DSN (에러 트래킹 - 선택사항)
# https://sentry.io/
SENTRY_DSN=


# ============================================
# 인증 방식 설정
# ============================================
# 로그인 방식: 'email' 또는 'username'
# email: 이메일로 로그인
# username: 사용자명(아이디)으로 로그인
NEXT_PUBLIC_LOGIN_METHOD=email


# ============================================
# 관리자 계정 설정
# ============================================
# 관리자 계정 (LOGIN_METHOD에 따라 이메일 또는 사용자명)
ADMIN_ACCOUNT=admin@example.com

# 관리자 비밀번호 (반드시 변경! 영문+숫자+특수문자 조합 권장)
ADMIN_PASSWORD=change-this-password
